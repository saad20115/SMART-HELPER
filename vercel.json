{
    "version": 2,
    "installCommand": "cd client && npm install && cd ../server && npm install && npx prisma generate && npx nest build",
    "buildCommand": "cd client && npm run build",
    "outputDirectory": "client/dist",
    "functions": {
        "server/api/index.js": {
            "includeFiles": "server/dist/**,server/node_modules/.prisma/**,server/node_modules/@prisma/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/api/index.js"
        }
    ]
}